<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1DC2C2C6"
    tools:context=".CurrentOrderDetailsActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <androidx.appcompat.widget.Toolbar
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_vertical">
               <TextView
                   android:id="@+id/arrow_back"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableStart="@drawable/ic_baseline_arrow_back"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toEndOf="@+id/arrow_back"
                   android:text="Order Details"
                   android:textSize="18sp"
                   android:textColor="@android:color/black"/>
           </RelativeLayout>
       </androidx.appcompat.widget.Toolbar>

       <!--Delivery Details-->
       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/orderStatus"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="#ADADAD"
           android:gravity="center"
           android:text="Pending"
           android:textAllCaps="false"
           android:textColor="@color/white"
           android:textSize="18sp"/>
       <androidx.cardview.widget.CardView
           android:id="@+id/dineInDetails"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardElevation="0dp"
           android:layout_marginTop="10dp"
           android:background="@color/white">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="10dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableStart="@drawable/ic_baseline_info_24"
                   android:drawablePadding="5dp"
                   android:text="Customer Information"
                   android:textColor="#413F3F"
                   android:textSize="18sp" />
               <TextView
                   android:id="@+id/dineInName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="25dp"
                   android:padding="5dp"
                   android:text=""
                   android:textColor="#747474"
                   android:textSize="18sp" />

               <TextView
                   android:id="@+id/dineInEmail"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="25dp"
                   android:padding="5dp"
                   android:text=""
                   android:textColor="#747474"
                   android:textSize="18sp" />

           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/pickUpDetails"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardElevation="0dp"
           android:layout_marginTop="10dp"
           android:background="@color/white">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="10dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableStart="@drawable/ic_baseline_info_24"
                   android:drawablePadding="5dp"
                   android:text="Customer Information"
                   android:textColor="#413F3F"
                   android:textSize="18sp" />

               <TextView
                   android:id="@+id/pickUpName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="25dp"
                   android:padding="5dp"
                   android:text=""
                   android:textColor="#747474"
                   android:textSize="18sp" />

               <TextView
                   android:id="@+id/pickUpEmail"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="25dp"
                   android:padding="5dp"
                   android:text=""
                   android:textColor="#747474"
                   android:textSize="18sp" />
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/deliveryDetails"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardElevation="0dp"
           android:layout_marginTop="10dp"
           android:background="@color/white">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="10dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableStart="@drawable/ic_baseline_location_on_24"
                   android:drawablePadding="5dp"
                   android:text="Delivery Address"
                   android:textColor="#413F3F"
                   android:textSize="18sp" />

               <TextView
                   android:id="@+id/deliveryName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="30dp"
                   android:layout_marginTop="10dp"
                   android:text=""
                   android:textColor="#747474"
                   android:textSize="18sp" />

               <TextView
                   android:id="@+id/deliveryPhoneNum"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="30dp"
                   android:layout_marginTop="10dp"
                   android:text=""
                   android:textColor="#747474"
                   android:textSize="18sp" />

               <TextView
                   android:id="@+id/devAddress"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="30dp"
                   android:layout_marginTop="10dp"
                   android:text=""
                   android:textColor="#747474"
                   android:textSize="18sp" />

               <TextView
                   android:id="@+id/labelAddress"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="30dp"
                   android:layout_marginTop="10dp"
                   android:background="@drawable/dark_square"
                   android:gravity="center"
                   android:padding="5dp"
                   android:text=""
                   android:textColor="#747474"
                   android:textSize="18sp" />
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardElevation="0dp"
           android:layout_marginTop="10dp"
           android:background="@color/white">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="10dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Order Type"
                   android:textColor="#7E7A7A"
                   android:textSize="18sp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Dine in"
                   android:textColor="#413F3F"
                   android:textSize="18sp" />
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <TextView
           android:id="@+id/orderNumber"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           android:visibility="invisible"/>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/newOrderDetailLists"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:scrollbars="vertical"/>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:background="@color/white">
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="#C6C6C6"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:text="Order Total"
                   android:fontFamily="@font/roboto"
                   android:textSize="16sp"
                   android:textColor="#413F3F"
                   android:layout_centerVertical="true"/>
               <TextView
                   android:id="@+id/totalAmount"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:text=""
                   android:fontFamily="@font/roboto"
                   android:textSize="16sp"
                   android:textColor="#413F3F"
                   android:layout_alignParentEnd="true"
                   android:layout_centerVertical="true"/>
           </RelativeLayout>
       </androidx.cardview.widget.CardView>
   </LinearLayout>
</ScrollView>