<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1DC2C2C6"
    tools:context=".activities.CurrentReservationActivity">
       <androidx.appcompat.widget.Toolbar
           android:id="@id/toolbar"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_vertical">
               <TextView
                   android:id="@+id/arrow_back"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableStart="@drawable/ic_baseline_arrow_back"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toEndOf="@+id/arrow_back"
                   android:text="Booking Details"
                   android:textSize="18sp"
                   android:textColor="@android:color/black"/>
           </RelativeLayout>
       </androidx.appcompat.widget.Toolbar>
       <ScrollView
          android:layout_below="@id/toolbar"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/bookingStatus"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:background="#ADADAD"
                   android:gravity="center"
                   android:text="Pending"
                   android:textAllCaps="false"
                   android:textColor="@color/white"
                   android:textSize="18sp"/>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:layout_marginTop="10dp"
                   app:cardElevation="0dp">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:padding="10dp">
                       <TextView
                           android:id="@+id/reserved"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Reserved Name"
                           android:textSize="18sp"
                           android:textColor="#747474"/>
                       <TextView
                           android:id="@+id/newReservedName"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/reserved"
                           android:text="John Cruz"
                           android:textColor="@color/black"
                           android:textSize="20sp"/>
                   </RelativeLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:layout_marginTop="10dp"
                   app:cardElevation="0dp">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:padding="10dp">
                       <TextView
                           android:id="@+id/phone"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Phone Number"
                           android:textSize="18sp"
                           android:textColor="#747474"/>
                       <TextView
                           android:id="@+id/newPhoneNumber"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/phone"
                           android:drawableStart="@drawable/ic_baseline_phone"
                           android:drawablePadding="5dp"
                           android:text="09174371664"
                           android:textColor="#4B4B4B"
                           android:textSize="16sp"/>
                   </RelativeLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:layout_marginTop="10dp"
                   app:cardElevation="0dp">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:padding="10dp">
                       <TextView
                           android:id="@+id/email"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Email"
                           android:textSize="18sp"
                           android:textColor="#747474"/>
                       <TextView
                           android:id="@+id/newEmailAddress"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/email"
                           android:drawableStart="@drawable/ic_baseline_email_24"
                           android:drawablePadding="5dp"
                           android:text="johncruz@gmail.com"
                           android:textColor="#4B4B4B"
                           android:textSize="16sp"/>
                   </RelativeLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:layout_marginTop="10dp"
                   app:cardElevation="0dp">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:padding="10dp">
                       <TextView
                           android:id="@+id/schedule"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Time"
                           android:textSize="18sp"
                           android:textColor="#747474"/>
                       <TextView
                           android:id="@+id/newScheduledTime"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/schedule"
                           android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                           android:drawablePadding="5dp"
                           android:text="Wed, Feb 28,2022 - 1:30 PM"
                           android:textColor="#4B4B4B"
                           android:textSize="16sp"/>
                   </RelativeLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:layout_marginTop="10dp"
                   app:cardElevation="0dp">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:padding="10dp">
                       <TextView
                           android:id="@+id/guests"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Guests"
                           android:textSize="18sp"
                           android:textColor="#747474"/>
                       <TextView
                           android:id="@+id/newGuests"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/guests"
                           android:drawableStart="@drawable/ic_baseline_people_24"
                           android:drawablePadding="5dp"
                           android:text="2 guests"
                           android:textColor="#4B4B4B"
                           android:textSize="16sp"/>
                   </RelativeLayout>
               </androidx.cardview.widget.CardView>
               <TextView
                   android:id="@+id/newId"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:visibility="invisible"/>
           </LinearLayout>
       </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:padding="20dp"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelBooking"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Cancel Booking"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:background="#4B4B4B"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>