<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1DC2C2C6"
    tools:context=".activities.PaymentActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:padding="10dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/roboto"
                android:drawableStart="@drawable/ic_baseline_arrow_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/arrow_back"
                android:layout_centerVertical="true"
                android:text="Payment"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_vertical"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/appbar">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingBottom="150dp">
          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/recyclerViewOrder"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/textPayment"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/checkoutlists"
              android:text="Choose a payment method"
              android:layout_marginTop="5dp"
              android:padding="10dp"
              android:fontFamily="@font/roboto"
              android:textSize="16sp"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp">
              <RadioGroup
                  android:id="@+id/choosePayment"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:padding="10dp">
                  <RadioButton
                      android:id="@+id/gcash"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="Gcash"/>
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="#DDDDDD"/>
                  <RadioButton
                      android:id="@+id/paypal"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="Paypal"/>
              </RadioGroup>
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/gcashImg"
                  android:layout_width="100dp"
                  android:layout_height="50dp"
                  android:padding="-20dp"
                  android:src="@drawable/gcash"/>
              <ImageView
                  android:layout_width="100dp"
                  android:layout_height="50dp"
                  android:padding="10dp"
                  android:layout_toEndOf="@id/gcashImg"
                  android:src="@drawable/paymaya"/>
          </RelativeLayout>
          <TextView
              android:id="@+id/textUpload"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:text="@string/textUpload"/>
          <androidx.cardview.widget.CardView
              android:id="@+id/cardViewImg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_marginLeft="10dp">
              <ImageView
                  android:id="@+id/imgPayment"
                  android:layout_width="80dp"
                  android:layout_height="70dp"
                  android:src="@drawable/camera"
                  android:layout_margin="10dp" />
          </androidx.cardview.widget.CardView>
      </LinearLayout>
  </ScrollView>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:padding="20dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/totalContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/texttotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/pesoSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="100dp"
                android:text="â‚±"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/pressed"/>
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="50dp"
                android:text="230"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/pressed"/>
            <TextView
                android:id="@+id/decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:text=".00"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/pressed"/>
            <Button
                android:id="@+id/payDelivery"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                style="?android:attr/borderlessButtonStyle"
                android:text="Place Order"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@color/pressed" />
            <TextView
                android:id="@+id/customerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
</RelativeLayout>