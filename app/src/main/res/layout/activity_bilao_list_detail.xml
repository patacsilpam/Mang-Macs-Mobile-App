<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BilaoListDetail">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@color/pressed"/>
    <TextView
        android:id="@+id/txt_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:drawableLeftCompat="@drawable/ic_baseline_arrow_back" />
           <ScrollView
               android:layout_below="@+id/image"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="10dp"
                       android:orientation="vertical">
                       <TextView
                           android:id="@+id/bilaoproductName"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Product Name"
                           android:textSize="22sp"
                           android:fontFamily="@font/roboto_medium"/>
                       <TextView
                           android:id="@+id/status"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Status"/>
                       <RadioGroup
                           android:id="@+id/bilaovariation"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="30dp">

                           <RadioButton
                               android:id="@+id/sevenToTen"
                               android:layout_width="wrap_content"
                               android:layout_height="55dp"
                               android:layout_marginRight="10dp"
                               android:text=""
                               android:textSize="14sp" />

                           <RadioButton
                               android:id="@+id/tenToFifteen"
                               android:layout_width="wrap_content"
                               android:layout_height="55dp"
                               android:layout_toEndOf="@+id/home"
                               android:textSize="14sp"
                               android:text=""/>
                           <RadioButton
                               android:id="@+id/fifteenToTwenty"
                               android:layout_width="wrap_content"
                               android:layout_height="55dp"
                               android:layout_toEndOf="@+id/home"
                               android:textSize="14sp"
                               android:text=""/>
                       </RadioGroup>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="50dp"
                           android:text="Special Instruction"
                           android:textSize="14sp"
                           android:textStyle="bold"
                           android:fontFamily="@font/roboto"/>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingTop="10dp"
                           android:paddingBottom="10dp"
                           android:fontFamily="@font/roboto_light"
                           android:text="Add instructions for your order" />
                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/bilaoadd_ons"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="100dp"
                           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                           app:counterEnabled="true"
                           app:counterMaxLength="255"
                           app:errorEnabled="true">
                           <com.google.android.material.textfield.TextInputEditText
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:padding="5dp"
                               android:inputType="text"
                               android:hint="e.g no mayo"/>
                       </com.google.android.material.textfield.TextInputLayout>
                       <TextView
                           android:id="@+id/customerId"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:visibility="invisible"
                           android:text="customerId"/>
                       <TextView
                           android:id="@+id/lname"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:visibility="invisible"
                           android:text=""/>
                       <TextView
                           android:id="@+id/fname"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:visibility="invisible"
                           android:text=""/>
                   </LinearLayout>
           </ScrollView>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#FFFFFF">
        <Button
            android:id="@+id/btnBilao"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/confirmation_button"
            android:text="Add to Cart"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:fontFamily="@font/roboto_medium"
            android:layout_gravity="center"
            android:textSize="16sp"/>
    </com.google.android.material.appbar.AppBarLayout>
</RelativeLayout>