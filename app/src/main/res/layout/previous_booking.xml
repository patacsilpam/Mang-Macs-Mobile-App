<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        android:layout_marginBottom="20dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CDCACA"
            android:layout_marginTop="120dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/reservedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Cruz"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/reservedDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/reservedName"
                android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="5dp"
                android:text="Wed, 28 Feb 2022 - 1:30 PM"
                android:textColor="#676A69"
                android:fontFamily="@font/roboto_light"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/guests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reservedDateTime"
                android:drawableStart="@drawable/custom_people_icon"
                android:drawablePadding="5dp"
                android:text="2 People"
                android:textColor="#676A69"
                android:fontFamily="@font/roboto_light"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/createdAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/guests"
                android:layout_marginRight="18dp"
                android:text="Created at: 11-17-2021 9:07:00"
                android:textAllCaps="false"
                android:textColor="#676A69"
                android:fontFamily="@font/roboto_light"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/orderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text=""
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/productID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text=""/>
            <TextView
                android:id="@+id/totalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productID"
                android:visibility="invisible"
                android:text=""/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>