<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        android:layout_marginBottom="20dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CDCACA"
            android:layout_marginTop="120dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProduct"
                android:layout_width="39dp"
                android:layout_height="42dp" />
            <TextView
                android:id="@+id/textProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/imgProduct"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/textVariation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/imgProduct"
                android:layout_below="@+id/textProduct"
                android:text=""
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp"
                android:textColor="#5E5757"/>
            <RelativeLayout
                android:id="@+id/itemLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgProduct"
                android:layout_below="@+id/textVariation"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="x"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="16sp"
                    android:textColor="#676A69"/>
                <TextView
                    android:id="@+id/items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="75dp"
                    android:layout_toEndOf="@+id/x"
                    android:layout_marginTop="5dp"
                    android:text="3"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="16sp"
                    android:textColor="#676A69"/>
                <TextView
                    android:id="@+id/textPesoSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="5dp"
                    android:text="â‚± "
                    android:fontFamily="@font/roboto_light"
                    android:textSize="16sp"
                    android:textColor="@color/pressed"/>
                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="16sp"
                    android:textColor="@color/pressed"/>
                <TextView
                    android:id="@+id/decimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:text=".00"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="16sp"
                    android:textColor="@color/pressed"/>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/orderStatus"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="45dp"
                android:layout_below="@+id/itemLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/gray_button"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_light"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/orderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_below="@+id/itemLayout"
                android:background="@drawable/cart_button"
                android:padding="7dp"
                android:text=""
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/productID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text=""/>
            <TextView
                android:id="@+id/totalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productID"
                android:visibility="invisible"
                android:text=""/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>