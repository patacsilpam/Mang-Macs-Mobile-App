<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        android:layout_marginBottom="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center_vertical">
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:buttonTint="@color/black"/>
           <ImageView
               android:id="@+id/imageView"
               android:text="image"
                android:layout_width="70dp"
                android:layout_height="70dp"
               android:src="@color/pressed"
                android:layout_toEndOf="@+id/checkbox" />
            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView"
                android:padding="10dp"
                android:text="Product Name"/>
            <TextView
                android:id="@+id/txtProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProductName"
                android:layout_toEndOf="@+id/imageView"
               android:layout_marginStart="10dp"
                android:text="Product Price"/>

            <Button
                android:id="@+id/btnDecrement"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/txtProductPrice"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/imageView"
                android:drawableLeft="@drawable/ic_outline_horizontal_rule"
               android:paddingLeft="5dp"/>

            <TextView
                android:id="@+id/textQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProductPrice"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/btnDecrement"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="0"/>
            <Button
                android:id="@+id/btnIncrement"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/txtProductPrice"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/btnDecrement"
                android:drawableEnd="@drawable/ic_baseline_add"
                android:paddingEnd="2dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>