<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        android:layout_marginBottom="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center_vertical">
            <CheckBox
                android:id="@+id/checkboxCart"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:buttonTint="@color/black"/>
           <ImageView
               android:id="@+id/imageView"
               android:text="image"
                android:layout_width="70dp"
                android:layout_height="70dp"
               android:src="@color/pressed"
                android:layout_toEndOf="@+id/checkboxCart" />
            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView"
                android:padding="10dp"
                android:text="Product Name"/>
            <TextView
                android:id="@+id/txtProductVariation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView"
                android:layout_below="@id/txtProductName"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:text="Size"/>
            <TextView
                android:id="@+id/pesoSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProductVariation"
                android:layout_toEndOf="@+id/imageView"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/pressed"
                android:text="â‚±"/>
            <TextView
                android:id="@+id/txtProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProductVariation"
                android:layout_toEndOf="@+id/pesoSign"
                android:padding="5dp"
                android:textColor="@color/pressed"
                android:text="300"/>

            <RelativeLayout
                android:id="@+id/incrementDecrememnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtProductPrice"
                android:layout_toEndOf="@id/imageView"
                android:layout_margin="10dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDecrement"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cart_button"
                    android:layout_marginTop="0dp"
                    android:padding="3dp"
                    android:drawableLeft="@drawable/ic_outline_horizontal_rule"/>

                <EditText
                    android:id="@+id/textQuantity"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_toEndOf="@+id/btnDecrement"
                    android:background="@drawable/cart_button"
                    android:inputType="number"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="14sp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnIncrement"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cart_button"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/textQuantity"
                    android:padding="3dp"
                    android:drawableLeft="@drawable/ic_baseline_add_24"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/incrementDecrememnt"
                android:layout_toEndOf="@+id/imageView"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/pressed"
                android:text="Total"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>